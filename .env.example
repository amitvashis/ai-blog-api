# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/ai-blog-db
MONGODB_URI_TEST=mongodb://localhost:27017/ai-blog-db-test

# JWT Authentication
JWT_SECRET=replace_with_your_secret_key
JWT_EXPIRES_IN=1d

# OpenAI API
OPENAI_API_KEY=your_openai_api_key

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# Scheduler Configuration
POSTS_GENERATION_SCHEDULE="0 2 * * *" # Every day at 2 AM